  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'ps-rust'",
      "cargo": {
        "args": ["build", "--bin=ps-rust", "--package=ps-rust"],
        "filter": {
          "name": "ps-rust",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "initCommands": ["settings set target.max-children-count 256"]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'ps-rust'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=ps-rust", "--package=ps-rust"],
        "filter": {
          "name": "ps-rust",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
